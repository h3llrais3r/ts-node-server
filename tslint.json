{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended", //
    "tslint-config-prettier"
  ],
  "jsRules": {},
  "rules": {
    "no-console": false, // Allow console statements
    "quotemark": [
      true,
      "single", // Force single quote
      "avoid-escape"
    ],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ]
  },
  "rulesDirectory": []
}
