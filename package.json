{
  "name": "ts-node-server",
  "version": "1.0.0",
  "description": "Basic Node.js server with Express in TypeScript",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/scss/styles.scss dist/public/css/styles.css",
    "watch-sass": "node-sass -w src/public/scss/styles.scss dist/public/css/styles.css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node scripts/copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "keywords": [
    "Node.js",
    "Express",
    "TypeScript"
  ],
  "author": "h3llrais3r",
  "license": "ISC",
  "dependencies": {
    "body-parser": "1.18.3",
    "compression": "1.7.3",
    "cors": "2.8.5",
    "dotenv": "6.2.0",
    "errorhandler": "1.5.0",
    "express": "4.16.4",
    "express-handlebars": "3.0.0",
    "express-validator": "5.3.1",
    "morgan": "1.9.1",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.0",
    "@types/compression": "0.0.36",
    "@types/cors": "2.8.4",
    "@types/dotenv": "6.1.0",
    "@types/errorhandler": "0.0.32",
    "@types/express": "4.16.1",
    "@types/express-handlebars": "0.0.30",
    "@types/express-validator": "3.0.0",
    "@types/morgan": "1.7.35",
    "@types/node": "11.9.4",
    "@types/shelljs": "0.8.3",
    "concurrently": "4.1.0",
    "node-sass": "4.11.0",
    "nodemon": "1.18.10",
    "prettier": "1.16.4",
    "shelljs": "0.8.3",
    "ts-node": "8.0.2",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.3.3"
  }
}
